{
  "name": "ideanick",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "b": "pnpm --filter @ideanick/backend",
    "f": "pnpm --filter @ideanick/frontend",
    "sh": "pnpm --filter @ideanick/shared",
    "check_types": "concurrently \"pnpm b check_types\" \"pnpm f check_types\"",
    "format": "concurrently \"pnpm b format\" \"pnpm f format\"",
    "lint": "concurrently \"pnpm b lint\" \"pnpm f lint\"",
    "test": "concurrently \"pnpm b test\" \"pnpm f test\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "29.5.5",
    "concurrently": "8.2.0",
    "copyfiles": "2.4.1",
    "cross-env": "7.0.3",
    "eslint": "8.47",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-react-app": "7.0.1",
    "eslint-config-standard-with-typescript": "^37.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "27.4.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jest": "29.7.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.4.2",
    "prettier-eslint": "^16.3.0",
    "ts-jest": "29.1.1"
  },
  "dependencies": {
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-n": "^17.16.1",
    "eslint-plugin-promise": "^7.2.1",
    "usehooks-ts": "2.9.1"
  }
}
