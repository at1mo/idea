{
  "name": "ideanick",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "b": "pnpm --filter @ideanick/backend",
    "f": "pnpm --filter @ideanick/frontend",
    "check_types": "concurrently 'pnpm b check_types' 'pnpm f check_types'",
    "format": "pnpm -r --parallel format",
    "lint": "concurrently 'pnpm b lint' 'pnpm f lint'"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "concurrently": "8.2.0",
    "eslint": "^9.21.0",
    "globals": "^15.14.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",

    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "prettier": "^3.4.2",
    "prettier-eslint": "^16.3.0",

    "typescript-eslint": "^8.24.1"
  }
}
