{
  "name": "@ideanick/backend",
  "private": true,
  "version": "0.0.0",
  "license": "ISC",
  "author": "A.Timokhin",
  "scripts": {
    "dev": "ts-node-dev --rs ./src/index.ts",
    "build": "rimraf ./dist && tsc --build ./tsconfig.json",
    "start": "node ./dist/index.js",
    "format": "prettier --log-level warn --cache --write \"{src/**/*,*}.{ts,tsx,js,jsx,json,yml,scss,css}\"",
    "check_types": "tsc --noEmit --project ./tsconfig.json",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --ext .ts ."
  },
  "dependencies": {
    "@trpc/server": "^10.37.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "lodash": "^4.17.21",
    "zod": "3.22.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/lodash": "^4.17.15",
    "@types/node": "^22.10.10",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
