{
  "name": "@ideanick/backend",
  "private": true,
  "version": "0.0.0",
  "license": "ISC",
  "author": "A.Timokhin",
  "scripts": {
    "start": "node ./dist/index.js",
    "dev": "ts-node-dev --watch ./src/emails/dist,./.env --rs --exit-child ./src/index.ts",
    "build": "pnpm build-ts && pnpm build-emails && pnpm copy-emails",
    "build-ts": "rimraf ./dist && tsc --build ./tsconfig.json",
    "build-emails": "rimraf ./src/emails/dist && mkdirp ./src/emails/dist && mjml ./src/emails/[!_]*.mjml -o ./src/emails/dist",
    "watch-emails": "mjml -w ./src/emails/[!_]*.mjml -o ./src/emails/dist",
    "copy-emails": "copyfiles -u 1 ./src/emails/dist/*.html ./dist",
    "pmd": "prisma migrate dev",
    "pgc": "prisma generate",
    "format": "prettier --log-level warn --cache --write \"{src/**/*,*}.{ts,tsx,js,jsx,json,yml,scss,css}\"",
    "check_types": "tsc --noEmit --project ./tsconfig.json",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --ext .ts .",
    "prepare": "pnpm pgc"
  },
  "prisma": {
    "schema": "./src/prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "5.2.0",
    "@trpc/server": "^10.37.1",
    "axios": "1.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "fast-glob": "3.3.1",
    "handlebars": "4.7.8",
    "jsonwebtoken": "9.0.2",
    "lodash": "^4.17.21",
    "mjml": "4.14.1",
    "passport": "0.6.0",
    "passport-jwt": "4.0.1",
    "superjson": "^1.13.3",
    "trpc-playground": "1.0.4",
    "zod": "3.22.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "9.0.2",
    "@types/lodash": "^4.17.15",
    "@types/node": "^22.10.10",
    "@types/passport": "1.0.12",
    "@types/passport-jwt": "3.0.9",
    "eslint-plugin-node": "11.1.0",
    "mkdirp": "^3.0.1",
    "prettier": "^3.4.2",
    "prisma": "5.2.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
